<form action="{{BASE}}{{options.process}}" method="POST">
	<div class="mb-3">
		<label for="nombre" class="form-label">Estado <span class="text-danger">*</span> </label>
		<input name="nombre" type="text" value="{{options.estado.nombre|default("")}}" class="form-control" id="nombre" aria-describedby="nombre">
		<div id="nombre" class="form-text text-danger">INGRESA EL ESTADO DE REVISION</div>
	</div>
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden" name="send" value="{{options.send}}">
	<button type="submit" class="btn btn-primary">Guardar</button>
	<a href="{{BASE}}{{options.back}}" class="btn btn-link">Volver</a>
</form>
