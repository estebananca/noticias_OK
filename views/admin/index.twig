{% extends "layout/default/template.twig" %}
{% block title %}Bienvenidos
{% endblock %}

{% block content %}
	<h2>MÃ³dulos Disponibles Para Administrar</h2>
	<h4>Haz click en el que deseas administrar</h4>
	<div class="row">
		<div class="card text-bg-dark mb-3 mx-2" style="max-width: 18rem;">
			<div class="card-header">Noticias</div>
			<div class="card-body">
				<h5 class="card-title">Lista de Noticias</h5>
				<p class="card-text">
					{% if session.user_role == 'Periodista' %}
						<a href="{{BASE}}noticias/noticiasUsuario/{{session.user_id}}" class="btn btn-light">Ingresar</a>
					{% else %}
						<a href="{{BASE}}noticias/index" class="btn btn-light">Ingresar</a>
					{% endif %}

				</p>
			</div>
		</div>
		{% if session.user_role == 'Administrador' %}
			<div class="card text-bg-info mb-3 mx-2" style="max-width: 18rem;">
				<div class="card-header">Roles</div>
				<div class="card-body">
					<h5 class="card-title">Lista de Roles</h5>
					<p class="card-text">
						<a href="{{BASE}}roles" class="btn btn-light">Ingresar</a>
					</p>
				</div>
			</div>
        {% endif %}
        {% if session.user_role == 'Administrador' or session.user_role == 'Editor' %}
            <div class="card text-bg-primary mb-3 mx-2" style="max-width: 18rem;">
                <div class="card-header">Usuarios</div>
                <div class="card-body">
                    <h5 class="card-title">Lista de Usuarios</h5>
                    <p class="card-text">
                        <a href="{{BASE}}usuarios" class="btn btn-light">Ingresar</a>
                    </p>
                </div>
            </div>
        {% endif %}
		{% if session.user_role == 'Administrador' or session.user_role == 'Periodista' %}
            <div class="card text-bg-success mb-3 mx-2" style="max-width: 18rem;">
                <div class="card-header">Estados</div>
                <div class="card-body">
                    <h5 class="card-title">Lista de Estados</h5>
                    <p class="card-text">
                        <a href="{{BASE}}estados" class="btn btn-light">Ingresar</a>
                    </p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
